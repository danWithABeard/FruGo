%h1
  packages#new

= form_for :package, :url => {:controller => 'packages', :action => 'create'} do |package|
  .package-form__input
    = package.label :Dimensions
    = package.text_field :dimension_1
    = package.text_field :dimension_2
    = package.text_field :dimension_3
  .package-form__input
    = package.label :pounds
    = package.text_field :pounds
  .package-form__input
    = package.label :ounces
    = package.text_field :ounces
  .package-form__input
    = package.label :zip_origination
    = package.text_field :zip_origination  
  .package-form__input
    = package.label :zip_destination
    = package.text_field :zip_destination
  .package-form__submit
    = package.submit