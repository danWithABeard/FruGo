%h1
  packages#edit

= form_for @package do |package|
  .package-form__input
    = package.label :Dimensions
    = package.text_field :length
    = package.text_field :width
    = package.text_field :height
  .package-form__input
    = package.label :weight
    = package.text_field :weight
  .package-form__input
    = package.label :zip_origination
    = package.text_field :zip_origination  
  .package-form__input
    = package.label :zip_destination
    = package.text_field :zip_destination
  .package-form__submit
    = package.submit